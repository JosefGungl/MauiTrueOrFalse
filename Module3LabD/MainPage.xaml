<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Module3LabD.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                x:Name="TheImage"
                Source="badguy.svg"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                x:Name="TheText"
                Text=""
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />
            
            
            <HorizontalStackLayout Padding=".5" HorizontalOptions="Center">

                <Button x:Name = "TBtn" Text="True" Clicked="OnClicked" ClassId="true" IsVisible="true" />
                <Button x:Name = "FBtn" Text="False" Clicked="OnClicked" ClassId="false" IsVisible="true" />
                
            </HorizontalStackLayout>
            
            <Button x:Name = "RBtn" Text="Restart" Clicked="OnRestartClicked" ClassId="restart" IsVisible="false"/>




